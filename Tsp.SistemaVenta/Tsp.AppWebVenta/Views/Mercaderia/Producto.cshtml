
<div class="container">
    <h2>Crear Producto</h2>
    <form class="form-horizontal" action="/Mercaderia/Producto" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="a1">Nombre*</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="a1" placeholder="Nombre del Producto" name="nombre">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="b1">Precio Unitario*</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="b1" placeholder="Precio Unitario" name="precioUnitario">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Registrar Producto</button>
            </div>
        </div>
    </form>
</div>

