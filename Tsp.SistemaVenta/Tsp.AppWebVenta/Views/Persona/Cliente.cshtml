
    <div class="container">
        <h2>Crear Cliente</h2>
        <form class="form-horizontal" action="/Persona/Cliente" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="a1">Nombre*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="a1" placeholder="Nombres" name="nombre">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="b1">Apellidos*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="b1" placeholder="Apellidos" name="apellido">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="c1">Telefono*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="c1" placeholder="Telefono" name="telefono">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="d1">D.N.I*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="d1" placeholder="Doc. de Identidad" name="dni">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="e1">Edad*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="e1" placeholder="Edad" name="edad">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Registrar Cliente</button>
                </div>
            </div>
        </form>
    </div>