@model Tsp.AppWebVenta.Models.Cliente

    <div class="container">
        <h2>Realizar Venta</h2>
        <form class="form-horizontal" action="/Transaccion/Venta" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="a1">Nombre del Cliente*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="a1" name="nombreCliente" value="@Model.Nombre @Model.Apellidos">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="b1">Doc. de Identidad*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="b1" name="docIdentidad" value="@Model.Dni">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="c1">Fecha*</label>
                <div class="col-sm-6">
                    <input class="form-control" type="date" id="c1" style="line-height: normal" name="fecha">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Registrar PreVenta</button>
                </div>
            </div>
        </form>
    </div>
